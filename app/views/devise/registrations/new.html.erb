<div class="content">
	<div class="col-md-12">
		<h1 class="white-page-heading">So you want to become a ninja?</h1>
		<h1 class="red-page-heading">Sign-up!</h1>
		<div class="header-border"></div>
	</div>
	<div id="login-widget" class="col-xs-12 col-sm-6  col-md-4 col-sm-offset-3 col-md-offset-4">
		<div class="panel ninja-panel" >
			<div class="panel-heading text-center">
	          <h5 class="text-uppercase mrg-btm-0"><strong>Signup for The Parts Ninja</strong></h5>
	        </div>
	        <div class="panel-body">
			<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
			  <div class="form-inputs">
			  	<div class="input-group">
			    	<span class="input-group-addon dark-input"><i class="fa fa-lg fa-user"></i></span><%= f.input :email, required: true, autofocus: true, label: false, placeholder: 'Email', input_html: { class: 'form-control input-lg dark-input'  } %>
			    </div>	
			    <div class="input-group">
		             <span class="input-group-addon dark-input"><i class="fa fa-lg fa-flash"></i></span>
		             <%= f.input :username, required: false, label: false, placeholder: 'Username', input_html: { class: 'form-control input-lg dark-input'} %>
	            </div>  
	            <div class="input-group">
		             <span class="input-group-addon dark-input"><i class="fa fa-lg fa-lock"></i></span>
		             <%= f.input :password, required: true, label: false, placeholder: 'Password', input_html: { class: 'form-control input-lg dark-input'} %>
	            </div>  
		        <div class="input-group">
		             <span class="input-group-addon dark-input"><i class="fa fa-lg fa-lock"></i></span>
		             <%= f.input :password_confirmation, required: true, label: false, placeholder: 'Password Confirmation', input_html: { class: 'form-control input-lg dark-input'} %>
	            </div>
			  </div>
			</div>
			<div class="panel-footer text-center">
	          <div class="login-btn">
			    <%= f.button :submit, "Sign Up", class:"btn-lg btn-block mrg-btm-10"  %>	  
			<% end %>
	          </div>
	            <%= link_to '<i class="fa fa-lg fa-sign-in"></i> Are you already a ninja?'.html_safe, new_session_path(resource_name), class:"register" %>         
			</div>
		</div>
	</div>     
</div> 

