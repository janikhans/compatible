<div class="row profile">
    <%= render 'shared/profile' %>
    <div class="col-md-9">
            <div class="profile-content ninja-panel">
              <div class="Profile-image">
                <div class="profile-header">Your current profile image:</div> 
                <%= gravatar_for @user %>
                <p class="gravatar-info">The Parts Ninja uses Gravatar. To change it, please go to <%= link_to "Gravatar", 'http://en.gravatar.com/', :target=> '_blank' %></p>
              </div>
                    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= f.error_notification %>
                <div class="form-inputs">
                  <%= f.input :email, required:false, placeholder: 'Email', input_html: { class: 'form-control input-lg dark-input'  } %>
                  <%= f.input :username, required: false,  placeholder: 'Username', input_html: { class: 'form-control input-lg dark-input'  } %>
                  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                    <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
                  <% end %>

                  <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", placeholder: 'New Password', required: false, input_html: { class: 'form-control input-lg dark-input'  } %>
                  <%= f.input :password_confirmation, required: false, placeholder: 'New Password Confirmation', input_html: { class: 'form-control input-lg dark-input'  } %>
                  <%= f.input :current_password, hint: "we need your current password to confirm your changes", placeholder: "Current Password", required: true, input_html: { class: 'form-control input-lg dark-input'  } %>
                </div>

                <div class="form-actions">
                  <%= f.button :submit, "Update" %>
                </div>
              <% end %>

                <p class= "deactivate">Unhappy? <%= link_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
            </div>
    </div>
  </div>
</div>